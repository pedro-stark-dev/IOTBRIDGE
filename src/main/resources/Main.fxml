<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="425.0" prefWidth="687.0" style="-fx-background-color: #0f0f0f;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stark.duckmodbus.controllers.MainController">

    <left>
        <!-- Menu lateral limpo -->
        <VBox prefWidth="160" spacing="10" style="-fx-background-color: #1a1a1a;">
            <padding><Insets bottom="20" left="15" right="15" top="20" /></padding>
           <children>
   
               <!-- Header -->
               <VBox alignment="CENTER" spacing="8">
      <children>
                      <Rectangle arcHeight="5" arcWidth="5" fill="linear-gradient(to right, #00d4ff, #0099ff)" height="35" width="35" />
                      <Label style="-fx-text-fill: #00d4ff; -fx-font-weight: bold; -fx-font-size: 12;" text="IOT" />
                      <Label style="-fx-text-fill: #00d4ff; -fx-font-weight: bold; -fx-font-size: 12;" text="BRIDGE" />
      </children>
               </VBox>
   
               <Separator style="-fx-background-color: #333;" />
   
               <!-- Botões do menu -->
               <Button maxWidth="Infinity" onAction="#openConnectionMenu" style="                 -fx-background-color: #2a2a2a;                 -fx-text-fill: #00d4ff;                 -fx-background-radius: 6;                 -fx-padding: 12 8;                 -fx-border-color: #00d4ff;                 -fx-border-width: 1;                 -fx-border-radius: 6;                 -fx-font-size: 11;                 -fx-font-weight: bold;             " text="CONEXÃO" />
   
               <Button maxWidth="Infinity" onAction="#openConfigurationMenu" style="                 -fx-background-color: #2a2a2a;                 -fx-text-fill: #cccccc;                 -fx-background-radius: 6;                 -fx-padding: 12 8;                 -fx-font-size: 11;             " text="CONFIGURAÇÃO" />
   
               <Button maxWidth="Infinity" onAction="#openCommandsMenu" style="                 -fx-background-color: #2a2a2a;                 -fx-text-fill: #cccccc;                 -fx-background-radius: 6;                 -fx-padding: 12 8;                 -fx-font-size: 11;             " text="COMANDOS" />
   
               <Button maxWidth="Infinity" onAction="#openHistoricMenu" style="                 -fx-background-color: #2a2a2a;                 -fx-text-fill: #cccccc;                 -fx-background-radius: 6;                 -fx-padding: 12 8;                 -fx-font-size: 11;             " text="HISTÓRICO" />
   
               <VBox VBox.vgrow="ALWAYS" />
   
               <!-- Status da conexão -->
               <VBox spacing="5" style="                 -fx-background-color: #2a2a2a;                 -fx-background-radius: 6;                 -fx-padding: 10;             ">
      <children>
                      <Label prefHeight="15.0" prefWidth="119.0" style="-fx-text-fill: #666; -fx-font-size: 10; -fx-font-weight: bold; -fx-alignment: center;" text="STATUS" />
                      <HBox alignment="CENTER_LEFT" spacing="8">
                         <children>
                             <Rectangle fx:id="statusLed" arcHeight="4" arcWidth="4" fill="#13cda1" height="8" width="8" />
                             <Label fx:id="statusText" style="-fx-font-size: 11; -fx-font-weight: bold;" text="Aguardando..." textFill="#15bca0" />
                         </children>
                      </HBox>
      </children>
               </VBox>
           </children>
        </VBox>
    </left>

    <center>
        <!-- Área principal do terminal -->
        <VBox spacing="12" style="-fx-padding: 15;">
           <children>
               <!-- Header do terminal -->
               <HBox alignment="CENTER_LEFT" spacing="15">
                  <children>
                      <VBox>
                         <children>
                             <Label style="                         -fx-text-fill: #00d4ff;                         -fx-font-size: 16;                         -fx-font-weight: bold;                     " text="TERMINAL SERIAL" />
                             <Label style="                         -fx-text-fill: #666;                         -fx-font-size: 10;                     " text="Porta: /dev/ttyUSB0 • Baud Rate: 115200 • 8N1" />
                         </children>
                      </VBox>
                      <HBox HBox.hgrow="ALWAYS" />
      
                      <!-- Controles do terminal -->
                      <HBox alignment="CENTER_RIGHT" spacing="6">
         <children>
                             <Button onAction="#clean" style="                         -fx-background-color: #333;                         -fx-text-fill: #ccc;                         -fx-background-radius: 4;                         -fx-padding: 6 10;                         -fx-font-size: 10;                     " text="LIMPAR" />
                             <Button onAction="#export" style="                         -fx-background-color: #333;                         -fx-text-fill: #ccc;                         -fx-background-radius: 4;                         -fx-padding: 6 10;                         -fx-font-size: 10;                     " text="EXPORTAR" />
                             <Button onAction="#pause" style="                         -fx-background-color: #333;                         -fx-text-fill: #ccc;                         -fx-background-radius: 4;                         -fx-padding: 6 10;                         -fx-font-size: 10;                     " text="PAUSAR" />
         </children>
                      </HBox>
                  </children>
               </HBox>
   
               <!-- Terminal - Área de mensagens -->
               <TextArea fx:id="receiver" editable="false" promptText="Aguardando conexão serial..." style="-fx-background-color: #000000; -fx-text-fill: #00ff00; -fx-font-family: 'Monospaced', 'Consolas', 'Courier New'; -fx-font-size: 16; -fx-background-radius: 4; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 4; -fx-control-inner-background: #000000;" VBox.vgrow="ALWAYS" />
   
               <!-- Área de entrada de comandos -->
               <HBox alignment="CENTER" spacing="8">
      <children>
                  <TextArea fx:id="sender" prefHeight="0.0" prefWidth="407.0" promptText="Aguardando conexão serial..." style="-fx-background-color: #000000; -fx-text-fill: #00ff00; -fx-font-family: 'Monospaced', 'Consolas', 'Courier New'; -fx-font-size: 16; -fx-background-radius: 4; -fx-border-color: #00d4ff; -fx-border-width: 1; -fx-border-radius: 4; -fx-control-inner-background: #000000;" />
      
                      <Button fx:id="Send" onAction="#sendRequest" style="                     -fx-background-color: linear-gradient(to right, #00d4ff, #0099ff);                     -fx-text-fill: #000000;                     -fx-background-radius: 4;                     -fx-padding: 8 20;                     -fx-font-weight: bold;                     -fx-font-size: 11;                 " text="ENVIAR" />
      </children>
               </HBox>
   
               <!-- Status bar -->
               <HBox alignment="CENTER_LEFT" spacing="15">
      <children>
                      <HBox alignment="CENTER_LEFT" spacing="6" />
                      <Label style="                     -fx-text-fill: #666;                     -fx-font-size: 10;                 " text="Buffer: 0 bytes" />
                      <Label style="                     -fx-text-fill: #666;                     -fx-font-size: 10;                 " text="Mensagens: 0" />
                      <HBox HBox.hgrow="ALWAYS" />
                      <Label style="                     -fx-text-fill: #666;                     -fx-font-size: 10;                 " text="Pronto" />
      </children>
               </HBox>
           </children>
        </VBox>
    </center>

</BorderPane>
