<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.*?>

<BorderPane prefHeight="686.0" prefWidth="400.0" style="-fx-background-color: #0f0f0f;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.stark.duckmodbus.controllers.ConnectionMenuController">

    <center>
        <!-- Menu de configuração serial centralizado -->
        <VBox alignment="CENTER" prefWidth="350.0" spacing="25.0" style="-fx-background-color: #1a1a1a; -fx-background-radius: 10; -fx-border-color: #333; -fx-border-width: 1; -fx-border-radius: 10;">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
           <children>
   
               <!-- Header -->
               <VBox alignment="CENTER" spacing="8.0">
      <children>
                      <Label style="-fx-text-fill: #00d4ff; -fx-font-weight: bold; -fx-font-size: 24;" text="CONFIGURAÇÃO SERIAL" />
                      <Separator style="-fx-background-color: #333; -fx-pref-width: 200;" />
      </children>
               </VBox>
   
               <!-- Configurações da porta -->
               <VBox prefWidth="300.0" spacing="15.0">
      <children>
                      <!-- Porta COM -->
                      <VBox spacing="6.0">
                         <children>
                             <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12; -fx-font-weight: bold;" text="PORTA SERIAL" />
                             <ChoiceBox fx:id="SerialPort" maxWidth="1.7976931348623157E308" style="-fx-text-fill: white; -fx-background-radius: 4; -fx-border-color: #333; -fx-border-width: 1; -fx-border-radius: 4; -fx-pref-height: 35;" />
                         </children>
                      </VBox>
      
                      <!-- Velocidade (Baud Rate) -->
                      <VBox spacing="6.0">
         <children>
                             <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12; -fx-font-weight: bold;" text="VELOCIDADE (BAUD)" />
                             <ChoiceBox fx:id="Velocity" maxWidth="1.7976931348623157E308" style="-fx-text-fill: white; -fx-background-radius: 4; -fx-border-color: #333; -fx-border-width: 1; -fx-border-radius: 4; -fx-pref-height: 35;" />
         </children>
                      </VBox>
      
                      <!-- Paridade -->
                      <VBox spacing="6.0">
         <children>
                             <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12; -fx-font-weight: bold;" text="PARIDADE" />
                             <ChoiceBox fx:id="Parity" maxWidth="1.7976931348623157E308" style="-fx-text-fill: white; -fx-background-radius: 4; -fx-border-color: #333; -fx-border-width: 1; -fx-border-radius: 4; -fx-pref-height: 35;" />
         </children>
                      </VBox>
      
                      <!-- Stop Bits -->
                      <VBox spacing="6.0">
         <children>
                             <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12; -fx-font-weight: bold;" text="STOP BITS" />
                             <ChoiceBox fx:id="StopBits" maxWidth="1.7976931348623157E308" style="-fx-text-fill: white; -fx-background-radius: 4; -fx-border-color: #333; -fx-border-width: 1; -fx-border-radius: 4; -fx-pref-height: 35;" />
         </children>
                      </VBox>
      
                      <!-- Data Bits -->
                      <VBox spacing="6.0">
         <children>
                             <Label style="-fx-text-fill: #cccccc; -fx-font-size: 12; -fx-font-weight: bold;" text="DATA BITS" />
                             <ChoiceBox fx:id="DataBits" maxWidth="1.7976931348623157E308" style="-fx-text-fill: white; -fx-background-radius: 4; -fx-border-color: #333; -fx-border-width: 1; -fx-border-radius: 4; -fx-pref-height: 35;" />
         </children>
                      </VBox>
      </children>
               </VBox>
   
               <!-- Botões de ação -->
               <VBox prefWidth="300.0" spacing="12.0">
      <children>
                      <Button maxWidth="1.7976931348623157E308" onAction="#connect" style="-fx-background-color: #00d4ff; -fx-text-fill: #000000; -fx-background-radius: 6; -fx-padding: 15; -fx-font-weight: bold; -fx-font-size: 14;" text="CONECTAR" />
                      <Button maxWidth="1.7976931348623157E308" onAction="#disconnect" style="-fx-background-color: #2a2a2a; -fx-text-fill: #cccccc; -fx-background-radius: 6; -fx-padding: 15; -fx-font-size: 14; -fx-border-color: #666; -fx-border-width: 1; -fx-border-radius: 6;" text="DESCONECTAR" />
      </children>
               </VBox>
   
               <!-- Status -->
               <VBox alignment="CENTER" spacing="8.0" style="-fx-background-color: #2a2a2a; -fx-background-radius: 8; -fx-padding: 15; -fx-pref-width: 300;">
      <children>
                      <Label style="-fx-text-fill: #666; -fx-font-size: 11; -fx-font-weight: bold;" text="STATUS DA CONEXÃO" />
                      <HBox alignment="CENTER" spacing="10.0">
                         <children>
                             <Rectangle fx:id="StatusLed" arcHeight="4.0" arcWidth="4.0" fill="RED" height="10.0" width="10.0" />
                             <Label fx:id="StatusText" style="-fx-font-size: 13; -fx-font-weight: bold;" text="DESCONECTADO" />
                         </children>
                      </HBox>
      </children>
               </VBox>
           </children>
        </VBox>
    </center>

</BorderPane>
